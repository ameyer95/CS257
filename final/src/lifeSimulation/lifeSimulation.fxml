<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.*?>


<AnchorPane fx:controller="lifeSimulation.Controller" xmlns:fx="http://javafx.com/fxml">

    <Button fx:id="pauseButton" text="Pause" AnchorPane.leftAnchor="30" AnchorPane.topAnchor="15" onAction="#onPauseButton"/>

    <Button fx:id="playButton" text="Play" AnchorPane.leftAnchor="90" AnchorPane.topAnchor="15" onAction="#onPlayButton"/>

    <Label fx:id="timeKeeperLabel" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="15" />

    <Label fx:id="scoreLabel" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="30" />



    <Button fx:id="questionButton" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="15" onAction="#onQuestionButton">
        <graphic>
            <ImageView fitHeight="25" fitWidth="25">
                <Image url="@images/image.png"/>
            </ImageView>
        </graphic>
    </Button>

    <GridPane fx:id="gameBoard"
           AnchorPane.topAnchor="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
                style="-fx-background-color: #bbb; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">


    </GridPane>
</AnchorPane>